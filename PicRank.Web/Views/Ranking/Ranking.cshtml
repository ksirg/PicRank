@model PicRank.Web.Models.MainPicWithList

@{
    ViewBag.Title = "Ranking";
}

<h2>Zdjęcie główne</h2>

<div id="mainPic">
    <img style="margin:5px 20px;float:left" src="@Request.Url.GetLeftPart(UriPartial.Authority)/@Model.MainPicture.FullPath" alt="picture @Model.MainPicture.Id"   width="220px"/>


  </div>
<div style="clear: both"></div>
<h2>Ranking zdjęć</h2>

@{
    for (int i = 0; i < Model.Pictures.Count; i++)
    {
        var item = Model.Pictures[i];

        if (i % 4 == 0)
        { 
           @: <div class="picRow">
        }

        <div class="picBox" >
                <img style="margin:2px auto" src="@Request.Url.GetLeftPart(UriPartial.Authority)/@item.FullPath" alt="picture @item.Id" width="180px" />
                <div class="picSummary">
                @(i+1) score=@item.RankingScore
                </div>
        </div>
        
       if( ((i+1)%4 ==0) || i==Model.Pictures.Count-1 ){
        @: </div>
        }

    }
}
<div style="clear: both">
</div>
